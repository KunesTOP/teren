<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:id="@+id/textHeroName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hero Name" tools:ignore="MissingConstraints"/>

    <TextView
            android:id="@+id/textScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score: 0" tools:ignore="MissingConstraints"/>


    <TextView
            android:id="@+id/textHealth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Health: 100%" tools:ignore="MissingConstraints"/>


    <TextView
            android:id="@+id/textAttack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attack: 10" tools:ignore="MissingConstraints"/>


    <TextView
            android:id="@+id/textDefense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Defense: 5" tools:ignore="MissingConstraints"/>


    <TextView
            android:id="@+id/textHealing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Healing: 2" tools:ignore="MissingConstraints"/>


    <TextView
            android:id="@+id/textKills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kills: 0" tools:ignore="MissingConstraints"/>

    <ImageView
            android:id="@+id/imageNorthWest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/northwest" tools:ignore="MissingConstraints"/>

    <ImageView
            android:id="@+id/imageNorth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/north" tools:ignore="MissingConstraints"/>


    <ImageView
            android:id="@+id/imageNorthEast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/northeast" tools:ignore="MissingConstraints"/>


    <ImageView
            android:id="@+id/imageWest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/west" tools:ignore="MissingConstraints"/>


    <ImageView
            android:id="@+id/imageCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/center" tools:ignore="MissingConstraints"/>

    <ImageView
            android:id="@+id/imageEast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/east" tools:ignore="MissingConstraints"/>


    <ImageView
            android:id="@+id/imageSouthWest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/southwest" tools:ignore="MissingConstraints"/>


    <ImageView
            android:id="@+id/imageSouth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/south" tools:ignore="MissingConstraints"/>


    <ImageView
            android:id="@+id/imageSouthEast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/southeast" tools:ignore="MissingConstraints"/>

</android.support.constraint.ConstraintLayout>