<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="novahra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/newGameBtn"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginTop="52dp"
            style="@style/Widget.AppCompat.Button.Borderless.Colored" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/exitbtn"/>
    <ImageView
            android:layout_width="261dp"
            android:layout_height="318dp" app:srcCompat="@drawable/ic_castle" android:id="@+id/imageView"
            tools:layout_editor_absoluteY="4dp" tools:layout_editor_absoluteX="7dp"
            tools:ignore="MissingConstraints,VectorDrawableCompat"/>
    <Button
            android:text="vysledky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/resultb"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            app:layout_constraintStart_toStartOf="@+id/exitbtn" app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginLeft="189dp" android:layout_marginStart="189dp"
            app:layout_constraintBottom_toBottomOf="@+id/newGameBtn"/>
    <Button
            android:text="konec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/exitbtn" tools:layout_editor_absoluteY="381dp"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints" style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_marginEnd="192dp" android:layout_marginRight="192dp"/>

</android.support.constraint.ConstraintLayout>