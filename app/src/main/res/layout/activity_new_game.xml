<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NewGameActivity">

    <TextView
            android:text="Jméno hráče"
            android:layout_width="51dp"
            android:layout_height="17dp" android:id="@+id/nameHeroTxt"
            tools:ignore="MissingConstraints" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/heroNameEdit"
            tools:layout_editor_absoluteX="134dp" tools:ignore="MissingConstraints"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Začít hrát"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"
            tools:ignore="MissingConstraints"
            style="@style/Widget.AppCompat.Button.Borderless.Colored" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/heroNameEdit" android:layout_marginTop="76dp"
            app:layout_constraintHorizontal_bias="0.465"/>
</android.support.constraint.ConstraintLayout>